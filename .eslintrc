{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "window": true
  },
  "extends": [
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
